# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/verified_inference
DATABASE_SSL=false

# Claude API Configuration
# This should be set as a repository secret in production
CLAUDE_API_KEY=your-claude-api-key-here

# Security
JWT_SECRET=your-jwt-secret-here-min-32-chars
JWT_EXPIRES_IN=7d

# CORS
# Single origin: CORS_ORIGIN=http://localhost:5173
# Multiple origins: CORS_ORIGIN=http://localhost:5173,https://verified-inference-frontend.vercel.app
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug